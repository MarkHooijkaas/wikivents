 <div class="form-group {{#if required}}form-group-required{{/if}} col-xs-12">
	<label for="{{name}}" class="control-label col-xs-6 col-sm-1">{{label}}</label>
    <div class="col-xs-12">
		<textarea type="{{type}}" class="form-control" id="{{name}}" name="{{name}}" rows="{{rows}}" {{#if required}}required{{/if}}> {{value}}</textarea>
		<script>CKEDITOR.replace( '{{name}}' );</script>
	</div>
</div>
  
