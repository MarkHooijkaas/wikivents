{{#ifLoggedIn}}
<div> 
	<h2>
		Reacties 
		<a data-toggle="modal" data-target="#{{name}}Modal"><span style="font-size:0.8em;" class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></a>
 	</h2>
  {{> include/modal.addComment}}
<table class="table table-hover">
    <tbody>
	{{#each record.comments.reverse}}
		<tr><td>{{&priv user.link}}<br><h6><small>@{{date}}</small></h6></td><td>{{comment}}</td></tr>
	{{/each}}
    </tbody>
</table>


</div>
{{/ifLoggedIn}}
